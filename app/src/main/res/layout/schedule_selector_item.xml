<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="New Text"
            android:id="@+id/selector_title" android:gravity="center_vertical"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:paddingLeft="10dp"/>
    <LinearLayout
            android:id="@+id/selector_container"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_below="@+id/selector_title"
            android:layout_centerHorizontal="true">
    </LinearLayout>
</RelativeLayout>
